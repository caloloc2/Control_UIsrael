<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".PrincipalActivity">

    <Button
        android:id="@+id/btn_bloqueo"
        android:layout_width="159dp"
        android:layout_height="136dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:text="BLOQUEO REMOTO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_activar_seguros"
        app:layout_constraintTop_toBottomOf="@+id/btn_ver_imagenes" />

    <Button
        android:id="@+id/btn_activar_seguros"
        android:layout_width="159dp"
        android:layout_height="136dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:text="ACTIVAR SEGUROS PUERTAS"
        app:layout_constraintEnd_toStartOf="@+id/btn_ver_imagenes"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_localizar" />

    <Button
        android:id="@+id/btn_localizar"
        android:layout_width="159dp"
        android:layout_height="136dp"
        android:background="@color/white"
        android:text="Localizar Automóvil"
        app:layout_constraintEnd_toStartOf="@+id/btn_ver_imagenes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ver_imagenes"
        android:layout_width="159dp"
        android:layout_height="136dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:text="Agregar Usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cerrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CERRAR SESIÓN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="178dp"
        android:layout_height="187dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_cerrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/uisraellogo" />

    <Button
        android:id="@+id/btn_apagar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="APAGAR EQUIPO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bloqueo" />

    <TextView
        android:id="@+id/txt_ahorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_apagar" />

    <TextView
        android:id="@+id/txt_alarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/design_default_color_error"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ahorro" />
</androidx.constraintlayout.widget.ConstraintLayout>